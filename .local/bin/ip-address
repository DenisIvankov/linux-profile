#!/bin/sh

STR_IPV4="$(ip addr show scope global primary | grep inet\  | cut -d\  -f6 | cut -d/ -f1)"
STR_IPV6="$(ip addr show scope global primary | grep inet6\  | cut -d\  -f6 | cut -d/ -f1)"

[ "${STR_IPV4}" != "" ] && printf "Primary IPv4 address: %s\n" "${STR_IPV4}"
[ "${STR_IPV6}" != "" ] && printf "Primary IPv6 address: %s\n" "${STR_IPV6}"
